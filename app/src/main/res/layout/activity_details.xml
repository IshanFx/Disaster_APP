<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".DetailsActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/disastertbl"
        >
        <TableRow
            android:layout_width="match_parent"
            style="@style/disasterdetails"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area"
                android:id="@+id/txtareashow"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Badulla"
                android:id="@+id/txtarea"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            style="@style/disasterdetails"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Disaster Type"
                android:id="@+id/txtdisastertypeshow"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Land slide"
                android:id="@+id/txtdisastertype"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            style="@style/disasterdetails"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Risk Level"
                android:id="@+id/txtriskshow"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High"
                android:id="@+id/txtrisk"
                />
        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            style="@style/disasterdetails"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:id="@+id/txtmessageshow"
                />

        </TableRow>


    </TableLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="20dp"
        android:id="@+id/txtmessage"
        android:text="This message is for all people who live in badulla"
        android:layout_column="0"
       android:layout_below="@+id/disastertbl"
        android:singleLine="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Check safe location"
        style="@style/btnsuggest"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
